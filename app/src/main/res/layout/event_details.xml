<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/details_place"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        tools:text="Evenement"
        android:textColor="@color/colorText"
        android:layout_margin="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/details_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        tools:text="15"
        android:textColor="@color/colorText"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/details_place"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <ImageView
        android:id="@+id/money"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:layout_constraintTop_toBottomOf="@id/details_place"
        app:layout_constraintLeft_toRightOf="@id/details_price"
        android:layout_marginTop="16dp"
        android:src="@drawable/money"
        tools:srcCompat="@drawable/money"/>

    <ImageView
        android:id="@+id/is_inside"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:layout_constraintTop_toBottomOf="@id/details_place"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="15dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/inside"
        tools:srcCompat="@drawable/inside"/>

    <ImageView
        android:id="@+id/is_handicap"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:layout_constraintTop_toBottomOf="@id/details_place"
        app:layout_constraintRight_toLeftOf="@id/is_inside"
        android:layout_margin="15dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/handicap"
        tools:srcCompat="@drawable/handicap"/>

    <ImageView
        android:id="@+id/date"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:layout_constraintTop_toBottomOf="@id/details_price"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="15dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/calendar"
        tools:srcCompat="@drawable/calendar"/>

    <TextView
        android:id="@+id/details_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        tools:text="15/12/2020"
        android:textColor="@color/colorText"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/money"
        app:layout_constraintLeft_toRightOf="@id/date"
        android:layout_margin="15dp"/>

    <ImageView
        android:id="@+id/description"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:layout_constraintTop_toBottomOf="@id/date"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="15dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/description"
        tools:srcCompat="@drawable/description"/>

    <TextView
        android:id="@+id/details_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        tools:text="description"
        android:textColor="@color/colorText"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/details_date"
        app:layout_constraintLeft_toRightOf="@id/description"
        android:layout_margin="15dp"/>


    <Button
        android:id="@+id/comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Commentaires"
        />

</androidx.constraintlayout.widget.ConstraintLayout>